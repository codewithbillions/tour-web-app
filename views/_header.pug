header.header
  nav.nav.nav--tours
    a.nav__el(href='/') Tours
  .header__logo
    img(src='/img/TWB_NB.png' alt='tour web logo' style='width:200px; height:200px; margin-top: 30px')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log Out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log In
      a.nav__el.nav__el--cta(href='/signup') Sign Up